#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/backlight.h>

#define DEF 0
#define DEFWIN 1
#define NUM 2
#define NUMWIN 3
#define FUN 4
#define FUNWIN 5
#define MOD 6
#define MODWIN 7

&lt {
    tapping-term-ms = <150>;
    quick-tap-ms = <250>;
};

/ {
    behaviors {
      l_p: left_positional_hold_tap {
          compatible = "zmk,behavior-hold-tap";
          #binding-cells = <2>;
          flavor = "tap-unless-interrupted";
          tapping-term-ms = <100>;                        // <---[[produces tap if held longer than tapping-term-ms]]
          quick-tap-ms = <200>;
          bindings = <&kp>, <&kp>;
          hold-trigger-key-positions = <7 8 9 10 11 12 13 21 22 23 24 25 26 27 37 38 39 40 41 42 43 44 45 53 54 55 56 57 58 59 68 69 70 71 72 73 74 75>;    // <---[[right-hand keys]]
        };

      r_p: right_positional_hold_tap {
          compatible = "zmk,behavior-hold-tap";
          #binding-cells = <2>;
          flavor = "tap-unless-interrupted";
          tapping-term-ms = <100>;                        // <---[[produces tap if held longer than tapping-term-ms]]
          quick-tap-ms = <200>;
          bindings = <&kp>, <&kp>;
          hold-trigger-key-positions = <0 1 2 3 4 5 6 14 15 16 17 18 19 20 28 29 30 31 32 33 34 35 36 46 47 48 49 50 51 52 60 61 62 63 64 65 66 67>;    // <---[[left-hand keys]]
        };
};

  conditional_layers {
        compatible = "zmk,conditional-layers";
        mod_layer {
            if-layers = <NUM FUN>;
            then-layer = <MOD>;
        };
        numwin_layer {
            if-layers = <NUM DEFWIN>;
            then-layer = <NUMWIN>;
        };
        funwin_layer {
            if-layers = <FUN DEFWIN>;
            then-layer = <FUNWIN>;
        };
        modwin_layer {
            if-layers = <MOD DEFWIN>;
            then-layer = <MODWIN>;
        };
    };

  combos {
        compatible = "zmk,combos";
        combo_bt_clr {
            timeout-ms = <50>;
            key-positions = <15 16>;
            layers = <MOD MODWIN>;
            bindings = <&bt BT_CLR>;
        };
    };

  keymap {
    compatible = "zmk,keymap";

    default_layer {
      bindings = <
        &none      &none        &none       &none       &none        &none       &none                                                                 &none    &none       &none        &none       &none       &none           &none
        &none      &kp Q        &kp W       &kp E       &kp R        &kp T       &none                                                                 &none    &kp Y       &kp U        &kp I       &kp O       &kp P           &none
        &none      &l_p LCTRL A &l_p LALT S &l_p LGUI D &l_p LSHFT F &l_p CAPS G &none               &none        &none    &none  &none                &none    &r_p CAPS H &r_p RSHFT J &r_p RGUI K &r_p RALT L &r_p RCTRL SEMI &none
        &none      &kp Z        &kp X       &kp C       &kp V        &kp B                                        &none    &none                                &kp N       &kp M        &kp MINUS   &kp LBKT    &kp SQT         &none
        &none      &none        &none       &none       &none                          &lt NUM BSPC  &lt FUN TAB  &none    &none  &lt FUN ENTER  &lt NUM SPACE              &none        &none       &none       &none           &none
      >;
    };
    defwin {
      bindings = <
        &trans    &trans      &trans      &trans       &trans    &trans    &trans                                              &trans    &trans    &trans    &trans       &trans         &trans         &trans
        &trans    &trans      &trans      &trans       &trans    &trans    &trans                                              &trans    &trans    &trans    &trans       &trans         &trans         &trans
        &trans    &l_p LGUI A &trans      &l_p LCTRL D &trans    &kp G     &trans        &trans &trans    &trans &trans        &trans    &kp H     &trans    &r_p RCTRL K &r_p LALT L    &r_p RGUI SEMI &trans
        &trans    &trans      &l_p RALT X &trans       &trans    &trans                         &trans    &trans                         &trans    &trans    &trans       &r_p RALT LBKT &trans         &trans
        &trans    &trans      &trans      &trans       &trans                     &trans &trans &trans    &trans &trans &trans                     &trans    &trans       &trans         &trans         &trans
      >;
    };
    num {
      bindings = <
        &none     &none         &none        &none        &none         &none         &none                                               &none     &none      &none            &none           &none           &none               &none 
        &none     &none         &kp N7       &kp N8       &kp N9        &kp COMMA     &none                                               &none     &none      &none            &none           &none           &none               &none 
        &none     &kp LCTRL     &l_p LALT N4 &l_p LGUI N5 &l_p LSHFT N6 &l_p CAPS DOT &none         &none  &none     &none  &none         &none     &kp CAPS   &r_p RSHFT GRAVE &r_p RGUI EQUAL &r_p RALT RBKT  &r_p RCTRL BSLH     &none 
